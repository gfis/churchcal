    <display-name>Church Calendar</display-name>
    <description>
        Compute church calendar with holydays
    </description>
    
    <!-- Servlets -->
    <servlet> 
        <servlet-name>CalendarServlet</servlet-name>
        <servlet-class>org.teherba.churchcal.CalendarServlet</servlet-class>
    </servlet>

    <servlet-mapping> 
        <servlet-name>CalendarServlet</servlet-name>
        <url-pattern>/servlet</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>servlet</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
</web-app>
